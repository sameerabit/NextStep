{% extends 'base.html.twig' %}

{% block title %}Asset index{% endblock %}

{% block body %}
    <h1>Asset index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>PhoneNumber</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asset in assets %}
            <tr>
                <td>{{ asset.id }}</td>
                <td>{{ asset.title }}</td>
                <td>{{ asset.phoneNumber }}</td>
                <td>{{ asset.description }}</td>
                <td>
                    <a href="{{ path('app_asset_show', {'id': asset.id}) }}">show</a>
                    <a href="{{ path('app_asset_edit', {'id': asset.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_asset_new') }}">Create new</a>
{% endblock %}
